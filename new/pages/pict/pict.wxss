/* pages/pict/pict.wxss */
page{background:#999;}
.makepic{position:fixed;width:600rpx;height:600rpx;left:0;top:0;margin:auto;box-shadow:0 0 2px 1px rgba(0,0,0,0.1);z-index:99;background:#f0f0f0;visibility:hidden;}
.makepiczz{position:fixed;width:600rpx;height:600rpx;left:0;top:0;margin:auto;z-index:100;background:#ffffff;visibility:hidden;}
.loadk{position:fixed;width:100%;height:100%;background:#fff;left:0;top:0;z-index:99999;}
.pintuk{position:fixed;width:600rpx;height:600rpx;left:200rpx;bottom:100rpx;margin:auto;background:#fff;z-index:999;box-shadow: 0 0 2px 1px rgba(0,0,0,0.2);border:5rpx solid #fff;}
.pintu{position:absolute;width:180rpx;height:180rpx;transition:all 0.1s ease;-webkit-transition:all 0.1s ease;z-index:10;}
.randombut{position:absolute;width:100rpx;top:417rpx;left:850rpx;height:150rpx;line-height:50rpx;text-align:center;font-size:22rpx;color:#fff;}
.exitbut{position:absolute;width:100rpx;top:557rpx;left:850rpx;height:150rpx;line-height:50rpx;text-align:center;font-size:22rpx;color:#fff;}
.randombut image,.exitbut image{display:block;margin:0 auto;width:60rpx;height:60rpx;}
.model{position:absolute;top:43rpx;left:850rpx;height:250rpx;width:250rpx;z-index:99;}

/*背景图片*/
.backimg{position:absolute;top:0;right:0;bottom:0;left:0;margin:auto;z-index:0;height:100%;min-width:100%;}
/*游戏说明*/
.shuom{width:100%;color:#fff;position:absolute;left:0;bottom:-70rpx;height:50rpx;line-height:20rpx;padding:5rpx 0;text-align:left;font-size:22rpx;opacity:0.7;}
