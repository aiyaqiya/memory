/* pages/video/vid.wxss */
.vid{width:100%;height:100%;position:fixed;left:0;top:0;z-index:10;}
.vid video{display:block;width:100%;height:100%;position:absolute;left:0;top:0;}
.vidbutk{position:fixed;width:100%;height:100%;background:#fff;z-index:8999;}
.vidplay{position:fixed;width:100%;height:40px;left:0;top:10px;right:0;margin:auto;color:#05a4ff;text-align:left;z-index:9999999999;}
.vidplay span{display:inline-block;margin:10px 5px;border:1px solid #ddd;border-radius:3px;padding:5px;cursor:pointer;}