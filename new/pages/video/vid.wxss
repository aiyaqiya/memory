/* pages/video/vid.wxss */
.vid{width:100%;height:100%;position:fixed;left:0;top:0;z-index:10;}
.listk{background:#000;}
.listk video,.vid video{display:block;width:100%;height:100%;position:absolute;left:0;top:0;}

.vidplay{position:fixed;width:130rpx;height:40rpx;right:15rpx;bottom:5rpx;color:#fff;z-index:99999;background:rgba(0,0,0,0.3);border-radius:20rpx;cursor:pointer;text-align:center;line-height:40rpx;font-size:20rpx;transform-origin:100% 0%;-webkit-transform-origin:100% 0%;transform:rotate(90deg);-webkit-transform:rotate(90deg);}
