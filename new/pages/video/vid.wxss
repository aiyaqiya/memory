/* pages/video/vid.wxss */
.vid{width:100%;height:100%;position:fixed;left:0;top:0;z-index:10;}
.vid video{display:block;width:100%;height:100%;position:absolute;left:0;top:0;}
.vidbutk{position:fixed;width:100%;height:100%;background:#fff;z-index:8999;}
.vidplay{position:fixed;width:100%;height:24rpx;left:15rpx;top:50rpx;right:0;margin:auto;color:#fff;text-align:left;z-index:9999999999;opacity:0.5;}
.vidplay span{display:inline-block;background:rgba(255,255,255,0.4);border-radius:20rpx;padding:0 15rpx;cursor:pointer;height:40rpx;line-height:40rpx;font-size:20rpx;}