.listk{background-position:center center;}
/*装饰框*/
.backk{width:100%;height:100%;position:absolute;left:0;top:0;z-index:11;}
.backk>image{position:absolute;}
.back_i1{left:10%;bottom:-50%;width:80rpx;opacity:0.7;animation:bsuofang 30s linear infinite;-webkit-animation:bsuofang 30s linear infinite;}
.back_i2{left:15%;bottom:-97%;width:30rpx;opacity:0.4;animation:bsuofang 50s linear infinite 20s;-webkit-animation:bsuofang 50s linear infinite 20s;}
.back_i3{left:25%;bottom:-20%;width:50rpx;opacity:0.5;animation:bsuofang 40s linear infinite;-webkit-animation:bsuofang 40s linear infinite;}
.back_i4{left:35%;bottom:-65%;width:150rpx;opacity:0.95;animation:bsuofang 25s linear infinite 15s;-webkit-animation:bsuofang 25s linear infinite 15s;}
.back_i5{left:65%;bottom:-40%;width:65rpx;opacity:0.7;animation:bsuofang 37s linear infinite 4s;-webkit-animation:bsuofang 37s linear infinite 4s;}
.back_i6{left:85%;bottom:-65%;width:75rpx;opacity:0.7;animation:bsuofang 27s linear infinite 16s;-webkit-animation:bsuofang 27s linear infinite 16s;}
.back_i7{left:90%;bottom:-20%;width:100rpx;opacity:0.8;animation:bsuofang 27s linear infinite 3s;-webkit-animation:bsuofang 27s linear infinite 3s;}
@keyframes bsuofang{
  0%{bottom:-20%;}
  100%{bottom:120%;}
}
@-webkit-keyframes bsuofang{
  0%{bottom:-20%;}
  100%{bottom:120%;}
}
/*轮船*/
.back_board{position:absolute;left:-30%;bottom:0;width:350rpx;animation:boardmove 25s ease infinite;-webkit-animation:boardmove 25s ease infinite;}
@keyframes boardmove{
  0%{left:-30%;}
  100%{left:130%;}
}
@-webkit-keyframes boardmove{
  0%{left:-30%;}
  100%{left:130%;}
}
